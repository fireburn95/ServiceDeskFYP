@model IEnumerable<ServiceDeskFYP.Models.SLAPolicy>

@{
    ViewBag.Title = "SLA's";
}

<h2>SLA's</h2>

<p>
    @Html.ActionLink("Create SLA", "sla/create") |
    @Html.ActionLink("Back to Tools", "Index")
</p>

@if (ViewBag.ErrorMessage != null)
{
    <h5 style="color: red">@ViewBag.ErrorMessage</h5>
}
@if (ViewBag.SuccessMessage != null)
{
    <h5 style="color: blue">@ViewBag.SuccessMessage</h5>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LowMins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedMins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HighMins)
        </th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LowMins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedMins)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HighMins)
                </td>
                <td>
                    @Html.ActionLink("Edit", "sla/Edit", new { id = item.Id })<!-- |
                    @Html.ActionLink("Remove", "Delete", new { id = item.Id })-->
                </td>
            </tr>
        }
    }

</table>
