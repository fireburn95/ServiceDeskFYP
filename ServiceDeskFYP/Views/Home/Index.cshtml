@{
    ViewBag.Title = "Home Page";
}

<!--Carousel for homepage-->
<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <div id="imageCarousel" class="carousel slide" data-wrap="true" data-pause="false" data-interval="4000" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#imageCarousel" data-slide-to="1"></li>
                    <li data-target="#imageCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/banner1.jpeg" class="img-responsive" />
                        <div class="carousel-caption">
                            <h3>Service Desk</h3>
                            <p>Connecting your business to clients</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/banner2.jpeg" class="img-responsive" />
                        <div class="carousel-caption">
                            <h3>Group and Management Tools</h3>
                            <p>Building and effectively managing relationships</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/banner3.jpeg" class="img-responsive" />
                        <div class="carousel-caption">
                            <h3>Statistics and Reports</h3>
                            <p>Tools to improve the areas of your business</p>
                        </div>
                    </div>
                </div>
                <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>

        </div>
    </div>
</div>
<!--End of Carousel for homepage-->


<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2>Have a Reference?</h2>
            <form method="get" action="#">
                <input type="text" placeholder="Reference..." name="reference" class="form-control" />
                <input type="submit" value="enter" class="btn btn-default" />
            </form>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
            <h2>Service Desk</h2>
            <p>
                Connecting your business to clients and improving operational Efficiency -
                This website is my Software Development Project for my Final Year Computing Module
                and is a Service Desk System.
            </p>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
            <h2>Additional Info</h2>
            <p>
                Please see here for relevant information including acknowledgements and details
            </p>
            <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
        </div>
    </div>
</div>



