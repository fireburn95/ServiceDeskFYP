@model ServiceDeskFYP.Models.AssociateClientPageViewModel

@{
    ViewBag.Title = "Associate to Client";
}

<h2>Associate Call to Client</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.CallSummary</h4>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <h5 style="color:red">@ViewBag.ErrorMessage</h5>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <h5 style="color:blue">@ViewBag.SuccessMessage</h5>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AssociateClient.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AssociateClient.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AssociateClient.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssociateClient.UpdateCallDetails, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AssociateClient.UpdateCallDetails)
                    @Html.ValidationMessageFor(model => model.AssociateClient.UpdateCallDetails, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Link" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Call", "ViewCall")
</div>
